@model FinancialPortal.Models.Bank

@{
    ViewBag.Title = "Delete";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 text-left">
            <h2>Are you sure you want to delete this account?</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3>@Html.DisplayFor(model => model.Name)</h3>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Balance)
                </dt>

                <dd>
                    $@Html.DisplayFor(model => model.Balance)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.BankType)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BankType.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Transactions)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Transactions.Count)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Created)
                </dt>

                <dd id="date_create">
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Updated)
                </dt>

                <dd id="date_update">
                </dd>

            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger btn-block" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <a href="/Banks/Index" title="Back to Accounts" class="btn btn-circle btn-lg btn-default"><i class="fa fa-arrow-left"></i></a>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        function transDate2(created, updated) {
            var time1 = getUserTime(created);
            $("#date_create").append(time1);
            var time2 = getUserTime(updated);
            $("#date_update").append(time2);
        }
        function transDate(created) {
            var time1 = getUserTime(created);
            $("#date_create").append(time1);
        }
        @if(Model.Updated != null)
        {
            @:transDate2('@Model.Created', '@Model.Updated');
        }
        else
        {
            @:transDate('@Model.Created');
        }

    </script>
    
    }