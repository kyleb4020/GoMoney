@model FinancialPortal.ViewModels.CategoriesIndexVM

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-1">
            <a href="#create_modal" class="btn btn-success btn-circle btn-lg" title="Add a New Category"><i class="fa fa-plus"></i></a>
        </div>
        <div class="col-lg-11">
            <h2>Categories</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.Budgets.First().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.Created)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.Updated)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Budgets.FirstOrDefault(b=>b.HouseholdId == Model.HouseholdId).Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Updated)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>